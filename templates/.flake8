# Flake8 Configuration Template for Python
[flake8]
# Maximum line length
max-line-length = 100

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    dist,
    build,
    docs,
    .tox,
    migrations,
    node_modules

# Ignore specific errors
ignore =
    # Whitespace before ':' (conflicts with black)
    E203,
    # Line too long (handled by black)
    E501,
    # Line break before binary operator (conflicts with black)
    W503,
    # Line break after binary operator
    W504

# Select specific errors to check
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    # Ignore unused imports in __init__.py
    __init__.py:F401
    # Ignore specific rules in tests
    tests/*:F401,F811

# Show source code for errors
show-source = True

# Show pep8 violation stats
statistics = True

# Count errors
count = True

# Format
format = default

# Enable plugins
enable-extensions = G

# Docstring conventions
docstring-convention = google
